{
  "name": "@travi/circle-scaffolder-javascript",
  "description": "CI scaffolder for JavaScript projects on Circle",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "repository": "travi/circle-scaffolder-javascript",
  "bugs": "https://github.com/travi/circle-scaffolder-javascript/issues",
  "homepage": "https://npm.im/@travi/circle-scaffolder-javascript",
  "sideEffects": false,
  "scripts": {
    "lint:md": "remark . --frail",
    "lint:js": "eslint . --cache",
    "lint:sensitive": "ban",
    "test:unit:base": "mocha --recursive test/unit",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "clean": "rimraf lib/",
    "build": "run-s clean build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "prepare": "husky install",
    "lint:publish": "publint --strict"
  },
  "files": [
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "make-dir": "^4.0.0",
    "write-yaml": "^1.0.0"
  },
  "devDependencies": {
    "@babel/register": "7.28.3",
    "@travi/any": "3.1.3",
    "@travi/babel-preset": "3.0.145",
    "@travi/eslint-config": "4.0.5",
    "@travi/eslint-config-mocha": "1.0.25",
    "ban-sensitive-files": "1.10.10",
    "c8": "10.1.3",
    "chai": "6.0.1",
    "commitlint-config-travi": "1.4.57",
    "cross-env": "10.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "mocha": "11.7.2",
    "npm-run-all2": "8.0.4",
    "publint": "0.3.12",
    "remark-cli": "12.0.1",
    "remark-preset-lint-travi": "6.0.8",
    "rimraf": "6.0.1",
    "rollup": "4.50.1",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "21.0.0"
  }
}
